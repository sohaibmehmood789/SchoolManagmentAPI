# Service Configuration
SERVICE_NAME=school-management-api
ENV=production
# PORT is auto-set by Railway, but you can set USER_PORT locally
USER_PORT=5111

# MongoDB Configuration (Use Railway MongoDB or MongoDB Atlas)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/school_management

# Redis Configuration (Use Railway Redis or Upstash)
REDIS_URI=redis://default:password@host:port
CORTEX_REDIS=redis://default:password@host:port
CORTEX_PREFIX=school_mgmt
CACHE_REDIS=redis://default:password@host:port
CACHE_PREFIX=school_mgmt:cache

# Security Keys (CHANGE THESE IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
LONG_TOKEN_SECRET=generate_a_64_character_random_string_here
SHORT_TOKEN_SECRET=generate_another_64_character_random_string_here
NACL_SECRET=generate_third_64_character_random_string_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS (comma-separated list for production)
ALLOWED_ORIGINS=https://yourfrontend.com,https://admin.yourfrontend.com
