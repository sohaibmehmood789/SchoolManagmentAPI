# Service Configuration
SERVICE_NAME=school-management-api
ENV=development
USER_PORT=5111

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/school_management

# Redis Configuration
REDIS_URI=redis://127.0.0.1:6379
CORTEX_REDIS=redis://127.0.0.1:6379
CORTEX_PREFIX=school_mgmt
CACHE_REDIS=redis://127.0.0.1:6379
CACHE_PREFIX=school_mgmt:cache

# Security Keys (CHANGE THESE IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
LONG_TOKEN_SECRET=your_long_token_secret_key_change_in_production_123456
SHORT_TOKEN_SECRET=your_short_token_secret_key_change_in_production_789012
NACL_SECRET=your_nacl_secret_key_change_in_production_345678

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS (comma-separated list for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
